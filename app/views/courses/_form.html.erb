<%= form_for(@course) do |f| %>
<%= render 'shared/errors', object: @course %>
<div class="form-group row">
  <%= f.label :title, class: 'control-label col-md-1' %>
  <div class="col-md-4">
    <%= f.text_field :title, class: 'form-control' %>
  </div>
</div>
<div class="form-group row">
  <%= f.label 'Day/Night', class: 'control-label col-md-1' %>
  <div class="col-md-4">
    <%= f.select :day_night, [['Day', true], ['Night', false]], {},  {class: 'form-control'} %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-offset-1 col-md-1">
    <%= f.submit class: 'btn btn-info' %>
  </div>
</div>

<% end %>
