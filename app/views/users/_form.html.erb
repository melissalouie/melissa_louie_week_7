<%= form_for(@user) do |f| %>

  <%= render 'shared/errors', object: @user %>

  <%= f.label :user_name %>
  <%= f.text_field :user_name %>

  <%= f.label :about %>
  <%= f.text_area :about %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>
