<%= form_for(@user) do |f| %>

  <%= render 'shared/errors', object: @user %>

  <div class="form-group row">
    <%= f.label 'Username', class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :about, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.text_area :about, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-offset-2 col-md-2">
      <%= f.submit class: 'btn btn-info'%>
    </div>
  </div>
<% end %>
