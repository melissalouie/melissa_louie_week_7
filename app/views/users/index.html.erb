<div class="container">
  <div class="page-header">
    <h1>Users</h1>
    <%= link_to 'Create User', new_user_path %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Username</th>
            <th>About</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.user_name %></td>
            <td><%= user.about %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
